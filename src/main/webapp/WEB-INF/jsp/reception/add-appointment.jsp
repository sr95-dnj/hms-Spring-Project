    <div class="page-wrapper">
        <div class="content">
            <div class="row">
                <div class="col-lg-8 offset-lg-2">
                    <h4 class="page-title">Add Appointment</h4>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-8 offset-lg-2">
                    <form action="/reception/create_appointment" method="post">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Appointment Date</label>
                                    <input class="form-control" type="datetime-local" value="APT-0001" name="appointDate">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Patient Name</label>
                                    <input class="form-control" type="text" name="name">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Patient Address</label>
                                    <input class="form-control" type="text" name="address">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Patient Mobile</label>
                                    <input class="form-control" type="text" name="mobile">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Doctor</label>
                                    
                                    <select class="select" name="doctor">
                                        <c:forEach items="${map.doctor}" var="doc">
                                            <option value="${doc.first_name}">${doc.first_name}</option>
                                        </c:forEach>
                                    </select>
                                         
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Department</label>
                                    
                                    <select class="select" name="department">
                                        <c:forEach items="${map.doctor}" var="doc">
                                            <option value="${doc.department}">${doc.department}</option>
                                        </c:forEach>
                                    </select>
                                         
                                </div>
                            </div>
                        </div>
                       
                       
                        <div class="form-group">
                            <label>Message</label>
                            <textarea cols="30" rows="4" class="form-control" name="comment"></textarea>
                        </div>
                       
                        <div class="m-t-20 text-center">
                            <button class="btn btn-primary submit-btn">Create Appointment</button>
                        </div>
                    </form>
                </div>
